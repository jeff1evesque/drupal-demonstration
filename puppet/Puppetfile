#!/usr/bin/env ruby
#^syntax detection

## Declare puppet module repository
forge "https://forge.puppetlabs.com"

## Install Module: vcsrepo
mod 'vcsrepo',
  :git => "https://github.com/puppetlabs/puppetlabs-vcsrepo.git",
  :ref => "1.3.0"

## Install Module: stdlib (nodejs dependency)
mod 'stdlib',
  :git => "https://github.com/puppetlabs/puppetlabs-stdlib.git",
  :ref => "4.6.0"

## Install Module: wget (nodejs dependency)
mod 'wget',
  :git => "https://github.com/maestrodev/puppet-wget",
  :ref => "v1.7.0"

## Install Module: nodejs
mod 'nodejs',
  :git => "https://github.com/puppet-community/puppet-nodejs.git",
  :ref => "1.1.0"